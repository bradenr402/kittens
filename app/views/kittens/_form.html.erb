<%= form_with model: @kitten do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, autofocus: true %>
  </div>

  <div>
    <%= form.label :age %>
    <%= form.number_field :age, in: 0..25 %>
  </div>

  <div>
    <%= form.label :cuteness %>
    <%= form.number_field :cuteness, in: 0..10 %>
  </div>

  <div>
    <%= form.label :softness %>
    <%= form.number_field :softness, in: 0..10 %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
